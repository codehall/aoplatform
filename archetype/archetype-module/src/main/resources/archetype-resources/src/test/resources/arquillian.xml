<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns="http://jboss.org/schema/arquillian"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <defaultProtocol type="Servlet 3.0"/>

    <engine>
        <property name="deploymentExportPath">target/deployments</property>
    </engine>

    <container qualifier="wildfly-managed">
        <configuration>
            <property name="outputToConsole">true</property>
            <property name="jbossHome">target/wildfly-8.2.0.Final</property>
            <property name="modulePath">target/wildfly-8.2.0.Final/modules</property>
            <property name="managementPort">9990</property>
            <!-- To change all ports this server is listening to, enable the following property. -->
            <!--<property name="javaVmArguments">-Djboss.socket.binding.port-offset=100</property>-->
        </configuration>
    </container>

    <container qualifier="wildfly-remote">
        <configuration>
            <property name="managementPort">9990</property>
        </configuration>
    </container>

</arquillian>