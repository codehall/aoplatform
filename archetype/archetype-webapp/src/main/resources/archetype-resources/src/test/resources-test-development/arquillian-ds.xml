<?xml version="1.0" encoding="UTF-8"?>
<datasources xmlns="http://www.jboss.org/ironjacamar/schema"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="
        http://www.jboss.org/ironjacamar/schema
        http://docs.jboss.org/ironjacamar/schema/datasources_1_0.xsd">

    <datasource jndi-name="java:jboss/arquillianDS" pool-name="arquillianDS"
                enabled="true" use-java-context="true">

        <connection-url>jdbc:postgresql://localhost:5432/arquillian</connection-url>
        <driver>jdbcdriver.war_org.postgresql.Driver_9_3</driver>
        <security>
            <user-name>postgres</user-name>
            <password>82354</password>
        </security>
    </datasource>

</datasources>